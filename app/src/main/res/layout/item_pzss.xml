<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <LinearLayout
        android:background="@drawable/bg_show"
        android:layout_width="@dimen/dp_151"
        android:layout_height="@dimen/dp_174"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">
        <ImageView
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102"
            android:id="@+id/pzsh_img"/>
        <TextView
            android:layout_width="@dimen/dp_131"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pzsh_name"
            android:textColor="#666666"
            android:maxLines="1"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="@dimen/dp_131"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pzsh_price"
            android:textColor="#ff00"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

</LinearLayout>
